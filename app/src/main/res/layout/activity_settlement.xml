<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFA500"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/save"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="保存"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title" />


    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFA500"
        android:gravity="left|center_vertical"
        android:text="采购价：HK$ "
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/sum_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/sum"
        android:layout_toRightOf="@id/sum"
        android:background="#FFA500"
        android:gravity="left|center_vertical"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/sum"
        android:layout_marginBottom="1dp"
        android:background="#FFA500"
        android:digits="0123456789."
        android:gravity="left|center_vertical"
        android:text="汇率："
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/rate_content"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rate"
        android:layout_toRightOf="@id/rate"
        android:background="#FFA500"
        android:digits="0123456789."
        android:gravity="left|center_vertical"
        android:inputType=""
        android:maxLines="1"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rate"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@id/rate_content"
        android:background="#FFA500"
        android:gravity="left|center_vertical"
        android:text="其他成本：￥"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cost_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cost"
        android:layout_toRightOf="@id/cost"
        android:background="#FFA500"
        android:gravity="left|center_vertical"
        android:inputType=""
        android:maxLines="1"
        android:textColor="#fff"
        android:textSize="20dp" />
</RelativeLayout>
